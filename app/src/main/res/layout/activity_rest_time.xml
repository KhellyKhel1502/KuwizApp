<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/restTimerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="Rest Time Remaining: 0:00"
        android:textColor="#FF8C00"
        android:textStyle="bold"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/encouragementTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You're doing great! Take a deep breath."
        android:textSize="18sp"
        android:textColor="#070707"
        android:layout_below="@id/restTimerTextView"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFD580"
        android:text="Stop Timer"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_below="@id/encouragementTextView"
        android:layout_marginTop="32dp" />

</RelativeLayout>
