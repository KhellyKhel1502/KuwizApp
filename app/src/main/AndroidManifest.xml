<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
        android:usesCleartextTraffic="true">

        <!-- Splash Screen Activity -->
        <activity
            android:name=".SplashActivity"
            android:exported="false" />

        <!-- Main Launch Activity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Homepage Activity -->
        <activity
            android:name=".HomepageActivity"
            android:exported="true" />

        <!-- Set Reminder Activity -->
        <activity
            android:name=".SetReminderActivity"
            android:exported="true" />

        <!-- Add Page Questions Activity -->
        <activity
            android:name=".AddQuestionsActivity"
            android:exported="true" />

        <!-- Question Activity -->
        <activity
            android:name=".QuizActivity"
            android:exported="true" />


        <!-- Timer Selection Activity -->
        <activity
            android:name=".TimerSelectionActivity1"
            android:exported="true" />

        <!-- Rest Time Activity -->
        <activity
            android:name=".RestTimeActivity"
            android:exported="true" />

        <activity
            android:name=".UserProgressActivity"
            android:exported="true" />



        <activity
            android:name=".MainActivity"
            android:exported="false" />

    </application>
</manifest>
